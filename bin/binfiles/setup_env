function check_file_exists() {
  if [ ! -f $1 ]; then
    echo "$1 does not exist. Please create it and add the required environment variables from 1Password vault."
    exit 1
  fi
}

function check_env_file() {
  local env_file=$1
  local env_example_file=$2

  local env_file_vars=$(grep -v '^#' $env_file | cut -d '=' -f 1 | sort)
  local env_example_file_vars=$(grep -v '^#' $env_example_file | cut -d '=' -f 1 | sort)

  if [ "$env_file_vars" != "$env_example_file_vars" ]; then
    echo "$env_file does not match $env_example_file. Please update $env_file with the required environment variables from 1Password vault."
    exit 1
  fi

}
